{
  "name": "products",
  "fields": {
    "productCode": {
      "type": "text",
      "indexed": true,
      "aliases": ["code", "sku", "itemCode"]
    },
    "name": {
      "type": "text",
      "indexed": true,
      "aliases": ["productName", "title"]
    },
    "description": {
      "type": "text"
    },
    "rodLength": {
      "type": "integer",
      "aliases": ["length"]
    },
    "price": {
      "type": "float"
    },
    "region": {
      "type": "text",
      "indexed": true
    },
    "inStock": {
      "type": "boolean"
    },
    "status": {
      "type": "text",
      "indexed": true,
      "aliases": ["state"]
    },
    "tags": {
      "type": "array"
    },
    "metadata": {
      "type": "json"
    },
    "createdAt": {
      "type": "datetime"
    }
  },
  "options": {
    "namingConvention": "snake_case",
    "strictFieldNames": false,
    "strictOperators": true,
    "defaultField": "name"
  }
}
